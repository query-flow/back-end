# ===== LLM (Azure OpenAI) =====
# Seu endpoint do recurso Azure OpenAI (NÃO incluir a barra final extra)
AZURE_OPENAI_ENDPOINT=https://<seu-endpoint>.openai.azure.com
# Coloque aqui a chave do recurso (NÃO comitar .env real)
AZURE_OPENAI_API_KEY=<coloque-sua-api-key-aqui>
# Nome do deployment/model configurado no Azure (ex.: gpt-4o_TechSolucoes)
AZURE_OPENAI_DEPLOYMENT=gpt-4o_TechSolucoes
# Versão da API (padrão ok)
AZURE_OPENAI_API_VERSION=2025-01-01-preview
# Use 1 para rodar sem chamar a LLM (retorna SELECT 1…), 0 para usar a LLM
DISABLE_AZURE_LLM=0

# ===== Banco de configuração da plataforma (onde salvamos empresas, conexões e schemas) =====
# Exemplo MySQL (schema 'empresas' precisa existir):
#   create database empresas character set utf8mb4 collate utf8mb4_unicode_ci;
# OBS: se sua senha tiver caracteres especiais, use URL-encode (ex.: @ -> %40)
CONFIG_DB_URL=mysql+pymysql://<user>:<senha-url-encoded>@127.0.0.1:3306/empresas?charset=utf8mb4

# ===== Criptografia (para guardar senha das conexões das orgs) =====
# Gere sua própria chave (64 chars base64) e cole aqui:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=<sua-fernet-key-aqui>
